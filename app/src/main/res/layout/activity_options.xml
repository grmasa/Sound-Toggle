<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:text="@string/exclude_modes_skip_when_toggling"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/cb_exclude_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/normal" />

    <CheckBox
        android:id="@+id/cb_exclude_vibrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vibrate" />

    <CheckBox
        android:id="@+id/cb_exclude_silent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/silent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/switch_txt"
        android:textSize="12sp" />

    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/sw_visual_silent_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:text="@string/visual_mode_title"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:text="@string/visual_mode_summary"
        android:textSize="12sp" />

    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/sw_visual_tile_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/visual_mode_switch_label" />

    <Button
        android:id="@+id/btn_save_exclusions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save" />

</LinearLayout>